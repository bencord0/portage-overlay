[Unit]
After=myip.service
Wants=myip.service

[Service]
EnvironmentFile=/etc/myip
EnvironmentFile=/etc/kubernetes/environment
ExecStartPre=/bin/mkdir -p /etc/kubernetes/manifests
ExecStart=/usr/bin/kubelet --pod-manifest-path=/etc/kubernetes/manifests --api-servers=${KUBERNETES_MASTER} --node-ip=${MYIP}
Restart=on-failure

[Install]
WantedBy=default.target
